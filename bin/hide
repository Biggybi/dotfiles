#!/bin/bash

# Hide or unhide file given as argument

if [ $1 == '-f' ]
then
	if [[ $2 == '.'* ]]
	then
		mv $2 ${2:1}
	else
		mv $2 "."$2
	fi
fi
if [ $1 == '-f' ]
then
	exit 1
fi

if [[ $1 == '.'* ]]
then
	if [ -e ${1:1} ]
	then
		echo "."$1 exists, use -f to override
	else
		mv $1 ${1:1}
	fi
else
	if [ -e "."$1 ]
	then
		echo "."$1 exists, use -f to override
	else
		mv $1 "."$1
	fi
fi
