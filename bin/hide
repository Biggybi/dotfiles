#!/bin/bash

# Hide or unhide file given as argument

let f=0

if [ $1 == '-f' ]
then
	let f=1
	shift
fi

while [[ $1 ]]
do
	let fname=$1
	if ! [ -e $fname ]
	then
		echo "no such file: $fname"
	elif [[ $fname == '.'* ]]
	then
		let unhidden_fname=${1:1}
		if [ $f == 0 ] && [ -e $unhidden_fname ]
		then
			echo "$fname exists, use -f to override"
		else
			mv $fname ${1:1}
			echo "unhide $fname"
		fi
	else
		if [ $f == 0 ] && [ -e "."$fname ]
		then
			echo ".$fname exists, use -f to override"
		else
			mv $fname "."$fname
			echo "hide $fname"
		fi
	fi
	shift
done
