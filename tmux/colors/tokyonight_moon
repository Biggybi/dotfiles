#!/bin/tmux

bk="#222436" ## bg
rd="#ff757f" ## red
gn="#c3e88d" ## green
yw="#ffc777" ## yellow
be="#82aaff" ## blue
pe="#fca7ea" ## purple
ma="#c099ff" ## magenta
we="#c8d3f5" ## fg

g1="#2f334d" ## bg_highlight
g2="#3b4261" ## fg_gutter
g3="#394b70" ## blue7
g4="#545c7e" ## dark3
g5="#737aa2" ## dark5

fg=${we}
bg=${bk}

session_fg=${be}
session_bg=${be}
session_fg_cmd=${yw}
session_bg_cmd=${yw}
window_current_bg=${g2}
window_current_fg=${fg}
status_right_bg=${g2}
status_right_fg=${fg}

# set -g status-left '#{?client_prefix,#[fg='$yw' bg='$g1'],#[fg='$g3' bg='$g1']}'
set -g status-left '#{?client_prefix,#[fg='$session_bg_cmd' bg='$bg'],#[fg='$session_bg' bg='$bg']}'
set -ga status-left '#{?client_prefix,#[fg='$bg' bg='$session_bg_cmd'],#[fg='$bg' bg='$session_bg']}'
set -ga status-left ' #S '
set -ga status-left '#{?client_prefix,#[fg='$session_bg_cmd' bg='$bg'],#[fg='$session_bg' bg='$bg']} '

set -g window-style fg="$fg",bg="$bg"
set -g window-active-style fg="$fg,"bg="$bg"

set -g status-style fg="$fg",bg="$bg"
set -g window-status-style fg="$g5",bg="$bg"
set -g window-status-format '  #I #W  '

set -g window-status-current-format '#[fg='$window_current_bg' bg='$bg']'
set -ga window-status-current-format '#{?window_zoomed_flag,#[fg='$fg' bg='$window_current_bg'],#[fg='$fg' bg='$window_current_bg']} #I #W '
set -ga window-status-current-format '#[fg='$window_current_bg' bg='$bg']'

# set -g window-status-current-style fg="$fg,"bg="$bg"
set -g pane-active-border-style fg="$g5,"bg="$bg"
set -g pane-border-style fg="$g4,"bg="$bg"

# left_sep = '#[fg='$g4' bg='$bg']'
# right_sep = '#[fg='$g4' bg='$bg']'

set -g status-right '#[fg='$status_right_bg' bg='$bg']'
set -ga status-right '#[fg='$status_right_fg' bg='$status_right_bg']#(~/bin/tmux/tmux_hostname)'
set -ga status-right '#[fg='$status_right_bg' bg='$bg'] '
set -ga status-right '#[fg='$status_right_bg' bg='$bg']'
# 󰅐 󰃭
set -ga status-right '#[fg='$status_right_fg' bg='$status_right_bg']󰅐 %H:%M 󰃭 %b-%d-%y'
set -ga status-right '#[fg='$status_right_bg' bg='$bg'] '
set -ga status-right '#[fg='$status_right_bg' bg='$bg']'
set -ga status-right '#[bg='$status_right_bg']#(~/bin/tmux/tmux_pia_state)#[fg='$fg' bg='$status_right_bg']'
set -ga status-right '#(~/bin/tmux/tmux_battery)#[fg='$fg' bg='$g3']'
set -ga status-right '#[fg='$status_right_bg' bg='$bg']'

#(~/bin/tmux/tmux_battery)"
# 

