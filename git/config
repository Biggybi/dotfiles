[user]
	email = biggybi@protonmail.com
	name = biggybi
[init]
	templatedir = ~/.git_template
	defaultBranch = main
[alias]
	ctags = !.git/hooks/ctags
	cm    = commit -m
	cam   = commit -am
	co    = checkout
	cob   = checkout -b
	s     = submodule
	suu   = submodule update --recursive --force --init --remote
	sui   = submodule update --init --recursive
	uuu   = submodule foreach git pull origin master
	uu    = pull
  deleted = log --diff-filter=D --summary
  deleted-files = log --diff-filter=D --summary --name-only --no-commit-id
[color]
	ui = true
	pager = false
[core]
	pager = nvim -R -
[pager]
	show = nvim -R -
	color = false
[pull]
	rebase = false
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c "Gvdiffsplit" "$MERGED"
