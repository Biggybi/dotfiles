set show-mode-in-prompt on
# set vi-ins-mode-string "\1\e[1;90m\2‚ï∞+ >\1\e[0m\2"
# set vi-cmd-mode-string "\1\e[1;91m\2‚ï∞‚îÄ >\1\e[0m\2"
# set vi-ins-mode-string "\1\e[01;92m\2‚ï∞Ôºã>\1\e[0m\2"
# „Ä±Í§∂Í™úÍ´≥Í≠óê©É
set vi-ins-mode-string "\1\e[01;92m\2‚ï∞‚îÄ ‚å™\1\e[0m\2"
set vi-cmd-mode-string "\1\e[01;33m\2‚ï∞‚îÄ‚å© \1\e[0m\2"
set bell-style none

# color based on filetype
set colored-stats on
# common prefix colored
set colored-completion-prefix on
# ignore case
set completion-ignore-case on
# show possible match on first tab
set show-all-if-ambiguous on
# show many item
set completion-query-items 5000
# no "more-like" pager
set page-completions off

set editing-mode vi

set keymap vi-insert
# "jk": vi-movement-mode
"\C-w": backward-kill-word
"\C-l": vi-end-word
"\C-h": backward-word
"\C-b": backward-char
"\C-f": forward-char
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-q": clear-screen
"\C-o": menu-complete-backward
"\C-j": next-history
"\C-k": previous-history
"\C-g": " | grep "
"\C-g\C-f": 'cd !$ \015'
# "\C-g\C-f": 'cd !$ \015 && ls\015'
# "\C-g\C-f": 'cd $(dirname $(readlink -f !$)) \015 && ls\015'
"\C-x\C-r": re-read-init-file

set keymap vi-command
"\C-x": backward-delete-char
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-l": vi-end-word
"\C-h": backward-word
"\C-j": next-history
"\C-k": previous-history
"\C-q": clear-screen
