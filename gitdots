#!/bin/bash

GITURL=https://github.com/Biggybi/dotfiles
SRC=~/.dotfiles
DST=~
BACKUP=~/.dotfiles/dots_back
FILES=(.bin
	.vim
	.vimrc
	.bashrc
	.bash_aliases)

LINK=(.bin
	.vim
	.vimrc
	.bashrc
	.bash_aliases)

if [[ "$OSTYPE" == "darwin"* ]]
then
	LINK=(.bin
		.vim
		.vimrc
		.bash_profile
		.bash_aliases)
fi

if [ -d $SRC ]
then
	echo "Not cloning : $SRC exists"
else
	git clone $GITURL $SRC
fi

i=0
for f in "${FILES[@]}"
do
	l=${LINK[i]}
	echo "$i $l"
	if [ -e $SRC/$l ]
	then
		if [ -L $DST/$l ]
		then
			echo "link deleted : $l"
			#rm $DST/$l
		elif [ -f $DST/$l ]
		then
			mv $DST/$l $BACKUP
			echo "file saved : $BACKUP $l"
		elif [ -d $DST/$l ]
		then
			mv $DST/$l $BACKUP/$l
			echo "file saved : $BACKUP $l"
		fi
		ln -fs $SRC/$f $DST/$l
		echo "link created : $l -> $f "
	else
		echo "no such file : $l"
	fi
	echo ======
	echo ${LINK[i]}
	#if [[ "${LINK[i]}" -eq "${LINK[-1]}" ]]
	#then
		#echo
	#fi
	let i=i+1
done
