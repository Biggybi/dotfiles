#!/bin/bash

GITURL=https://github.com/Biggybi/dotfiles
SRC=~/.dotfiles
DST=~
BACKUP=~/.dotfiles/dots_back
FILES=".vimrc\
	.bashrc\
	.bash_aliases"

if [ -d $SRC ]
then
	echo "Not cloning : $SRC exists"
else
	git clone $GITURL $SRC
fi
for f in $FILES
do
	if [ -e $SRC/$f ]
	then
		if [ -L $DST/$f ]
		then
			rm $DST/$f
		elif [ -f $DST/$f ]
		then
			mv $DST/$f $BACKUP
			echo $f : saved in $BACKUP
		fi
		ln -s $SRC/$f $DST
		echo $f : File linked
	else
		echo $f : No such file
	fi
done
