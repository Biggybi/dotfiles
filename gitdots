#!/bin/bash

GITURL=https://github.com/Biggybi/dotfiles
SRC=~/.dotfiles
DST=~
FILES=".vimrc\
	.bashrc\
	.bash_aliases"

if [ -d $SRC ]
then
	echo "Not cloning : $SRC exists"
else
	git clone $GITURL $SRC
fi
for f in $FILES
do
	if [ -L $DST/$f ]
	then
		rm $DST/$f
	fi
	ln -s $SRC/$f $DST
	echo file linked : $f
done
